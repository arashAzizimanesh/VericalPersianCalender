<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <ir.webcando.vpc.customview.CustomTextView
        android:id="@+id/txt_month"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"

        android:text="ماه"

        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_jome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/jome">

                <ir.webcando.vpc.customview.CustomTextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"


                    android:text="جمعه"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_panj_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/panj_shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"


                    android:text="پنج شنبه"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_chahar_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/chahar_shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    app:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="چهار شنبه"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_se_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                android:tag="@string/se_shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="سه شنبه"

                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_do_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/do_shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="دوشنبه"

                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_yek_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/yek_shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="یکشنبه"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_shanbe"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="@string/shanbe">

                <ir.webcando.vpc.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="شنبه"


                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>